<div class="d-flex p-3 bd-highlight rounded container gray-bg mb-5 align-items-center" >
    <div id="carouselExampleControls" class="carousel slide mr-4" data-ride="carousel" style="width: 50%; opacity: {{ isPublished ? 1 : 0.3 }}">
        <div class="carousel-inner" >
            {% for key, image in images %}
                {% set activeClass = key == 0 ? "active" : "" %}
                <div class="carousel-item {{ activeClass }}" >
                    <img class="d-block w-100" src="{{ asset(image) }}" >
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="d-flex justify-content-space-between flex-column">
        <div class="d-flex spc-btw"  style="opacity: {{ isPublished ? 1 : 0.3 }}">
            <h3 class="bold">{{ title }}</h3>
            <h3>{{ price }}â‚¬</h3>
        </div>
        <div class="d-flex align-items-center" style="opacity: {{ isPublished ? 1 : 0.3 }}">
            <p class="h6 badge badge-pill badge-warning mr-4 p-2">{{ category.name }}</p>
            <p class="h6 badge badge-success p-1">{{ post.condition }}</p>
        </div>
        <p style="opacity: {{ isPublished ? 1 : 0.3 }}" class="small">Aspernatur maxime vitae impedit enim voluptates. Quibusdam quasi aut tempore modi quos. Nam saepe nihil expedita voluptatem eligendi rerum.</p>
        <div style="opacity: {{ isPublished ? 1 : 0.3 }}" class="d-flex spc-btw">
            <p>Published on {{ post.createdAt|date('d/m/Y') }}</p>
            <p>Published by {{ name }}</p>
        </div>
        <a class="btn primary-bg" href="{{ path('app_post', {id: post.id}) }}">
            Go to announce
        </a>
        {% if (fromProfile) %}
            <div class="d-flex spc-btw">
                <a class="btn {{isPublished ? "btn-warning" : "btn-success text-white" }} w-100 mt-2 ">{{ isPublished ? "Turn to draft" : "Publish" }}</a>
            </div>
        {% endif %}
    </div>
</div>