{% extends 'base.html.twig' %}

{% block title %}
    Home page
{% endblock %}


{% block body %}
        <div class="h2 text-center mb-5">Bonjour Prénom</div>
        <div class="h4 text-center mb-5">Last announces</div>
        {% for post in posts  %}
                {% set nameArray =  post.author.name|split('.') %}
                {% set firstName = nameArray[0] %}
                {% set lastName = nameArray|length > 1 ?  nameArray[1] : "" %}
                <div class="d-flex p-3 bd-highlight rounded container mb-5 align-items-center">
                    <div id="carouselExampleControls" class="carousel slide mr-4" data-ride="carousel" style="width: 50%">
                        <div class="carousel-inner">
                        {% for key, image in post.images %}
                            {% set activeClass = key == 0 ? "active" : "" %}
                            <div class="carousel-item {{ activeClass }}">
                                <img class="d-block w-100" src="{{ image }}" >
                            </div>
                        {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                </div>
                <div class="d-flex justify-content-space-between flex-column">
                    <div class="d-flex spc-btw">
                        <h5 class="bold">{{ post.title }}</h5>
                        <h5>{{ post.price }}€</h5>
                    </div>
                    <div class="d-flex">
                        <p class="mr-1">{{ post.category.name }}</p>
                        <p class="mr-1">-</p>
                        <p>{{ post.condition }}</p>
                    </div>
                    <p class="small">Aspernatur maxime vitae impedit enim voluptates. Quibusdam quasi aut tempore modi quos. Nam saepe nihil expedita voluptatem eligendi rerum.</p>
                    <div class="d-flex spc-btw">
                        <p>Publiée le {{ post.createdAt|date('d/m/Y') }}</p>
                        <p>Publié par {{ firstName|capitalize }} {{ lastName|capitalize }}</p>
                    </div>
                    <a href='{{ path('app_post',{id: post.id}) }}' class="btn btn-primary text-white">
                        go to announce
                    </a>
                </div>
            </div>
        {% endfor %}
{% endblock %}
