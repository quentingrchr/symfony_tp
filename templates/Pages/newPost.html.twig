{% extends 'base.html.twig' %}

{% block title %}
    New Post
{% endblock %}

{% block body %}
    <div class="container mt-5 p-4" style="max-width: 600px;">
        <h1 class="h2 text-center mb-5">You will post an anouncement</h1>
        <form method="POST" action="{{ path("app_add_post") }}" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input name="title" id="title" placeholder="Announcement title" type="text" class="form-control" required/>
                <label for="title">Annnouncement title *</label>
            </div>
            <div class="form-floating mb-3">
                <select name="category" id="category" class="form-select" aria-label="Default select example" >
                    {% for categorie in categories %}
                        <option value="{{ categorie.id }}">{{ categorie.name|capitalize }}</option>
                    {% endfor %}
                </select>
                <label for="category" >Item category *</label>
            </div>
            <div class="form-floating mb-3">
                <input name="price" id="price" placeholder="Item price (€)" type="number" class="form-control" required/>
                <label for="price">Item price (€) *</label>
            </div>
            <div class="d-flex flex-column gap-1 rounded mb-3" style="padding: 1rem 0.75rem; border:1px solid #ced4da">
                <label class="form-label">Item state *</label>
                <div class="d-flex gap-3">
                    <div class="form-check">
                        <input name="condition" id="condition" type="radio" class="form-check-input" value="first hand" checked />
                        <label class="form-check-label" for="condition">
                            First hand
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="condition" id="condition-bis" type="radio" class="form-check-input" value="second hand" />
                        <label class="form-check-label" for="condition-bis">
                            Second hand
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <textarea name="description" id="description" placeholder="Description" type="text" class="form-control" row="3" required></textarea>
                <label for="description">Item description *</label>
            </div>
            <div class="mb-3">
                <input name="image-one" type="file" class="form-control" />
            </div>
            <div class="mb-3">
                <input name="image-two" type="file" class="form-control" />
            </div>
            <div class="mb-3">
                <input name="image-three" type="file" class="form-control" />
            </div>
            <div class="d-flex flex-column gap-1 rounded mb-3" style="padding: 1rem 0.75rem; border:1px solid #ced4da">
                <label class="form-label">Do you want to publish your announcement right now?</label>
                <div class="d-flex gap-3">
                    <div class="form-check">
                        <input name="publication" id="publication-on" type="radio" class="form-check-input" value="on" checked />
                        <label class="form-check-label" for="publication-on">
                            Yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input name="publication" id="publication-off" type="radio" class="form-check-input" value="off" />
                        <label class="form-check-label" for="publication-off">
                            No
                        </label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" name="submit-post" class="btn primary-bg px-5" />Publish</button>
            </div>
        </form>
    </div>
{% endblock %}