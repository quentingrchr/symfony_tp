{% extends 'base.html.twig' %}

   {% block title %}
      {% if(post is null) %}
         Not found
      {% else %}
         Post: {{ post.title }}
      {% endif %}
   {% endblock %}


   {% block body %}
      {% if(post is null) %}
         <p style="display: flex; justify-content: center; text-align: center">Sorry, this post doesn't exists</p>
         <a href="{{ path('app_home_page') }}" style="display: block; width: fit-content" class="btn btn-primary my-5 mx-auto">Back to home page</a>
      {% elseif((not app.user and (app.user and (post.author.id != app.user.id))) or is_granted('ROLE_ADMIN'))  %}
         <p style="display: flex; justify-content: center; text-align: center">This post in not published <br> If tout want to manage your post, please login </p>
         <a href="{{ path('app_home_page') }}" style="display: block; width: fit-content" class="btn btn-primary my-5 mx-auto">Back to home page</a>
      {% else %}
         {% set nameArray = post.author.name|split('.') %}
         {% set firstName = nameArray[0] %}
         {% set lastName = nameArray|length > 1 ?  nameArray[1] : "" %}
         <div class="w-50 p-3 mx-auto mt-10">
            <div class="singlePost">
               <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                     {% for key, image in post.images %}
                        {% set activeClass = key == 0 ? "active" : "" %}
                        <div class="carousel-item {{ activeClass }}">
                           <img class="d-block w-100"  src="{{ image }}" >
                        </div>
                     {% endfor %}
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                     <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                     <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                     <span class="carousel-control-next-icon" aria-hidden="true"></span>
                     <span class="sr-only">Next</span>
                  </a>
               </div>
               <div class="contentContainer mt-4">
                  <div class="titleContainer d-flex justify-content-between">
                     <h1>{{ post.title }}</h1>
                     <h1>{{ post.price }} ‚Ç¨</h1>
                  </div>
                  <div class="d-flex align-items-center">
                     <p class="h6 badge badge-pill badge-warning mr-2 p-2">{{ post.category.name }}</p>
                     <p class="h6 badge badge-success p-2">{{ post.condition }}</p>
                  </div>
                  <p class="mt-3">{{ post.description }}</p>
                  <div class="d-flex justify-content-between">
                     <p>{{ post.createdAt|date('d-m-Y') }}</p>
                     <p class="mb-0">Published by {{ firstName|capitalize }} {{ lastName|capitalize }} </p>
                     <div class="d-flex flex-column align-items-center mt-0" >
                        <span class="text-muted h5"><u>Author rating</u></span>
                        <form action="{{ path('app_post_vote', {id: post.id}) }}" class="d-flex align-items-center" method="post" >
                           <button class="btn btn-primary btn-sm" name="vote" value="up">üëç</button>
                           <span class="badge badge-secondary mr-2 ml-2">{{ post.author.votes }}</span>
                           <button class="btn btn-primary btn-sm" name="vote" value="down">üëé</button>
                        </form>
                     </div>
                  </div>
               </div>
            </div>
            <div class="questionsContainer mt-3">
                  <tr>
                     <th>
                        {% if ((app.user and (post.author.id == app.user.id)) or (is_granted('ROLE_ADMIN')) ) %}
                           <div class="d-flex justify-content-between">
                                 <a class="btn btn-danger" style="width: 45%" href="{{ path('app_post_delete', {id: post.id}) }}">Delete post</a>
                                 <a class="btn btn-success" style="width: 45%" href="" >{{ post.isPublished ? "Turn to draft" : "Publish" }}</a>
                           </div>
                        {% endif %}
                        {% if app.user and (post.author.id != app.user.id)%}
                           <a class="btn btn-primary mt-2" data-toggle="collapse" href="#collapseQuestionAsk" role="button" aria-expanded="false" aria-controls="collapseExample">
                              Post a question to the seller
                           </a>
                        {% endif %}
                     </div>
                     <div class="collapse mt-3" id="collapseQuestionAsk">
                        <form action="{{ path("app_question_add", {id: post.id}) }}" method="post">
                           <div class="form-group">
                              <textarea required name="content" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="your question"></textarea>
                           </div>
                           <button class="btn btn-success" type="submit">Submit</button>
                        </form>
                     </div>
                  </th>
               </tr>
               {% if post.questions|length > 0 %}
                  <p class="btn btn-secondary w-100 mt-4" style="cursor: default">Questions</p>
                  {% for key, question in post.questions %}
                     {% set nameArray =  question.author.name|split('.') %}
                     {% set firstNameQ = nameArray[0] %}
                     {% set lastNameQ = nameArray|length > 1 ?  nameArray[1] : "" %}

                        <table class="table">
                        <thead class="thead-light">
                           <tr>
                              <th scope="col"><small>by</small> {{ firstNameQ }} {{ lastNameQ }}</th>
                           </tr>
                        </thead>
                        <tbody>
                           <tr>
                              <th>
                                 <p>{{ question.content }}</p>
                                 {% if ( app.user and ((post.author.id == app.user.id) or (is_granted('ROLE_ADMIN'))) ) %}
                                    <p>
                                       <a class="btn btn-primary" data-toggle="collapse" href="#collapsePostAnswer{{ key }}" role="button" aria-expanded="false" aria-controls="collapseExample">
                                          <small>Post an answer</small>
                                       </a>
                                    </p>
                                    <div class="collapse" id="collapsePostAnswer{{ key }}">
                                       <form action="{{ path('app_answer_add', {id: question.id}) }}" method="post">
                                          <div class="form-group">
                                             <textarea name="content" required class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="your answer"></textarea>
                                          </div>
                                          <input name="postId" value="{{ post.id }}" style="display: none">
                                          <button class="btn btn-success" type="submit"><small>Submit</small></button>
                                       </form>
                                    </div>
                                 {% endif %}
                              </th>

                           </tr>
                           {% if question.answers|length > 0 %}
                              <tr>
                                 <th>
                                    <p>
                                       <a class="btn btn-secondary" data-toggle="collapse" href="#collapseAnswers{{ key }}" role="button" aria-expanded="false" aria-controls="collapseExample">
                                          <small>Show seller answers<span class="ml-3">üîΩ</span></small>
                                       </a>
                                    </p>
                                    <div class="collapse" id="collapseAnswers{{ key }}">
                                       {% for answer in question.answers %}
                                          <div class="card card-body mt-1">
                                             <small>
                                                {{ answer.content }}
                                             </small>
                                          </div>
                                       {% endfor %}
                                    </div>
                                 </th>
                              </tr>
                           {% endif %}
                        </tbody>
                     </table>
                    {% endfor %}
               {% else %}
                  <p><small><em>No questions here</em></small></p>
               {% endif %}

         </div>
      {% endif %}
   {% endblock %}




